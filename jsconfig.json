{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@classes/*": ["classes/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@scripts/*": ["scripts/*"],
      "@utils/*": ["utils/*"],
      "@public/*": ["public/*"]
    }
  },
  "exclude": ["node_modules", "uploads", "tmp"]
}
